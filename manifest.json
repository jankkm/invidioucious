{

  "manifest_version": 2,
  "name": "Invidioucious",
  "version": "0.1",

  "description": "This extension for Firefox aims to redirect all requests made to Youtube to an Invidous instance.",
  
  "icons": {
    "48": "icons/invidioucious-48.ico"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "run_at": "document_start",
      "js": ["invidioucious.js"]
    }
  ],

  "options_ui": {
    "page": "options.html"
  },

  "permissions": ["storage"],

  "applications": {
    "gecko": {
      "id": "invidioucious@wolke7.net"
    }
  }

}
